{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "module": "ESNext",                     // Enable ES Modules (important for `import`/`export`)
    "moduleResolution": "NodeNext",        // Resolve .ts/.js/.json like Node ESM
    "target": "ES2020",                    // Use a modern JS target
    "esModuleInterop": true,               // Allow CommonJS modules to be imported
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,

    "rootDir": "src",                      // Your input TypeScript files
    "outDir": "dist"                       // Compiled JS output
  },
  "include": ["src"],
  "typeRoots": ["./node_modules/@types", "./src/types"]
}
